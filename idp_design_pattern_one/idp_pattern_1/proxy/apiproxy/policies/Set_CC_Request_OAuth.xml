<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="Set_CC_Request_OAuth">
    <DisplayName>Set_CC_Request_OAuth</DisplayName>
    <AssignVariable>
        <Name>oauth_external_authorization_status</Name>
        <Value>true</Value>
    </AssignVariable>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <!-- We are setting the OAuth credentials here to better match the RFC 7523 standard -->
    <Add>
        <FormParams>
            <FormParam name="grant_type">client_credentials</FormParam>
            <FormParam name="client_id">{originalClientId}</FormParam>
        </FormParams>
    </Add>
    <AssignTo createNew="false" transport="http" type="request"/>
</AssignMessage>